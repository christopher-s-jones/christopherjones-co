<header class="fixed top-0 left-0 right-0 z-50
        backdrop-blur-md bg-white bg-opacity-75 dark:bg-slate-950 dark:bg-opacity-50">
    <!-- Responsive padding -->
    <div
        class="flex items-center justify-between px-6 py-4 3xl:py-6"
    >
        <!-- Logo on the left  -->
        <svg
            class="size-10 3xl:size-14 fill-amber-400 hover:fill-amber-500 justify-end"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
        >
            <path
                fill-rule="evenodd"
                d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
                clip-rule="evenodd"></path>
        </svg>
        <!-- Navigation on the right -->
        <!-- Mobile menu -->
        <nav class="md:hidden">
            <button
                type="button"
                class="text-slate-500 dark:text-slate-400
                    hover:text-slate-600 dark:hover:text-slate-300
                    size-8 flex items-center justify-center"
            >
                <span class="sr-only">Navigation</span>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    class="size-6 fill-slate-500"
                >
                    <path
                        fill-rule="evenodd"
                        d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z"
                        clip-rule="evenodd"></path>
                </svg>
            </button>
        </nav>
        <!-- Desktop menu -->
        <nav
            class="hidden md:flex items-center justify-end font-sans font-semibold text-lg 3xl:text-3xl"
        >
            <div>
                <a
                    class="text-center p-3 ml-5 text-slate-700 dark:text-slate-100 hover:text-amber-500 dark:hover:text-amber-400"
                    href="/">Services</a>
            </div>
            <div>
                <a
                    class="text-center p-3 ml-5 text-slate-700 dark:text-slate-100 hover:text-amber-500 dark:hover:text-amber-400"
                    href="/about/">About</a>
            </div>
            <div>
                <a
                    class="text-center p-3 ml-5 text-slate-700 dark:text-slate-100 hover:text-amber-500 dark:hover:text-amber-400"
                    href="/about/">Contact</a>
            </div>
            <!-- Togle light or dark mode -->
            <button class="items-center px-3 py-2 ml-5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="size-6 3xl:size-10 fill-slate-700 hover:fill-amber-500 dark:hover:fill-amber-400 dark:fill-white">
                    <path fill-rule="evenodd" d="M9.528 1.718a.75.75 0 0 1 .162.819A8.97 8.97 0 0 0 9 6a9 9 0 0 0 9 9 8.97 8.97 0 0 0 3.463-.69.75.75 0 0 1 .981.98 10.503 10.503 0 0 1-9.694 6.46c-5.799 0-10.5-4.7-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 0 1 .818.162Z" clip-rule="evenodd" />
                  </svg>
            </button>
            <!-- Booking button -->
            <button
                class="flex gap-3 
                rounded-lg text-center items-center
                bg-gradient-to-r from-amber-400 from-20% to-amber-500 to-90%
                hover:bg-gradient-to-br hover:from-amber-500 hover:from-20% hover:to-amber-600 hover:to-90%
                text-white px-3 py-2 3xl:px-6 3xl:py-4 ml-5"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    class="grid-flow-dense size-6 3xl:size-10 fill-white"
                >
                    <path
                        fill-rule="evenodd"
                        d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z"
                        clip-rule="evenodd"></path>
                </svg>
                <a class="" href="/book/">Book a Call</a>
            </button>
        </nav>
    </div>
</header>
