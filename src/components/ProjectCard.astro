---
import Image from "astro/components/Image.astro";
import Badge from "./Badge.astro";
const { title, subtitle, class: className, imageStyles, imageURL, imageCaption, imageAlt, imageWidth, imageHeight, badges = [] } = Astro.props;
---
<div class:list={["flex flex-col lg:flex-row gap-20 xl:gap-40 items-center md:items-start justify-center 3xl:max-w-[2560px] py-20 md:py-40 2xl:px-40", [className]]}>
    <div class="items-start text-slate-800 dark:text-slate-400">
        <h2 class="text-slate-800 dark:text-slate-300 text-left
            font-sans font-normal md:font-light tracking-tight
            dark:font-extralight dark:sm:font-light
            mb-5
            text-xl sm:text-2xl md:text-3xl lg:text-4xl 2xl:text-5xl 3xl:text-6xl">
            {title}
        </h2>
        <h3 class="text-sky-500 text-left
            font-sans font-normal md:font-light tracking-tight
            dark:font-extralight dark:sm:font-light
            mb-5 md:mb-10
            text-lg md:text-xl 2xl:text-2xl 3xl:text-3xl">{subtitle}</h3>
        <slot />
        <p class="flex flex-row flex-wrap items-center justify-start">
            {badges.map((text: string) => (
                <Badge text={text} />
            ))}

        </p>
    </div>
    <Image src={imageURL} class={imageStyles} alt={imageAlt} width={imageWidth} height={imageHeight} />
        <!-- <span class="prose dark:prose-invert prose-base">{imageCaption}</span> -->
</div>
