---
const { iconSlug } = Astro.props;
const iconPath = `../components/icons/${iconSlug}.astro`;
const iconFiles: Record<string, unknown> = import.meta.glob("../components/icons/*.astro", {eager: true});
const icons = Object.values(iconFiles);
const iconComponent = icons.find(icon => icon.file.includes(iconPath));
---
<div class="flex flex-col items-center -justify-center place-content-center
    rounded-xl p-10 bg-amber-50 dark:bg-blue-975">
    <!-- TODO: figure out dynamic icon embedding here -->
    <slot />
</div>